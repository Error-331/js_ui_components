{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "classes": true
    }
  },

  "extends": [
    "plugin:flowtype/recommended"
  ],

  "plugins": ["babel", "flowtype"],

  "rules": {
    "semi": 2,
    "babel/new-cap": 1,
    "babel/no-invalid-this": 1,
    "babel/object-curly-spacing": 1,
    "babel/semi": 1,
    "babel/no-unused-expressions": 1
  }
}